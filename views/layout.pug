doctype html
// Start the html section
html
    // Start the head section
    head
        // Set the favicon to be an base64 encoded USA flag
        link(href="data:image/x-icon;base64,", rel="icon", type="image/x-icon")
        // Sets the website title to be GPS Tool
        title GPS Tool
        // Mark this point to be where the scripts will be inserted
        block scripts
        // Set the stylesheet to be the generated css file in the public/stylesheets folder
        link(rel="stylesheet", href="/stylesheets/style.css")
    body
        // set the content block in the body section
        block content
